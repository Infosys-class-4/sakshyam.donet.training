
using System;
class Conditionals
{

    public void LearnConditionals()
    {
        int marks = 45;

        if (marks < 40)
        {
            Console.WriteLine("your are failed");
        }

        else if (marks < 60)
        {
            Console.WriteLine("your passed with second division");
        }

        else if (marks < 80)
        {
            Console.WriteLine("your passed first division");
        }

        else
        {
            Console.WriteLine("your passed  dictinsion");

        }

    }

}
